{
  "name": "doggy-nav-server",
  "version": "1.0.0",
  "description": "[Hacker News](https://news.ycombinator.com/) showcase using typescript && egg",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "EGG_SERVER_ENV=prod node scripts/validate-secrets.js && egg-scripts start  --port=3002 --daemon --title=doggy-nav-server",
    "docker-start": "EGG_SERVER_ENV=prod node scripts/validate-secrets.js && egg-scripts start --title=doggy-nav-server",
    "build": "npm run tsbuild",
    "build:ci": "npm run tsbuild:ci",
    "stop": "egg-scripts stop --title=doggy-nav-server",
    "server": "egg-bin dev",
    "dev": "egg-bin dev --port=3002",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "ets": "ets",
    "tsbuild": "tsc -p tsconfig.json",
    "tsbuild:ci": "tsc -p tsconfig.json --noCheck",
    "bundle:bookmark": "esbuild dist/bookmarkHelper-standalone.ts --bundle --platform=node --outfile=dist/bookmarkHelper-bundle.js --format=cjs --external:mongodb --external:mongoose",
    "bundle:cli": "esbuild dist/bookmarkHelper-cli.ts --bundle --platform=node --outfile=dist/bookmarkHelper-cli-bundle.js --format=cjs",
    "init:categories": "ts-node utils/initCategories.ts",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "ets clean",
    "validate-secrets": "node scripts/validate-secrets.js"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "bcrypt": "^6.0.0",
    "cheerio": "1.0.0-rc.10",
    "dotenv": "^17.2.2",
    "egg": "^3.31.0",
    "egg-bin": "^6.13.0",
    "egg-jwt": "3.1.7",
    "egg-mock": "^5.15.2",
    "egg-mongoose": "3.3.1",
    "egg-ratelimiter": "^0.1.0",
    "egg-scripts": "^3.1.0",
    "egg-security": "^3.7.0",
    "koa-json-error": "^3.1.2",
    "mongoose": "^8.18.1",
    "node-cron": "^4.2.1",
    "request": "^2.88.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/mocha": "2.2.40",
    "@types/node": "7.0.12",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autod": "3.1.2",
    "autod-egg": "1.1.0",
    "egg-ci": "1.19.0",
    "egg-ts-helper": "^3.1.1",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "eslint-config-egg": "^14.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.17.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "",
  "license": "MIT",
  "main": ".autod.conf.js",
  "directories": {
    "test": "test"
  },
  "keywords": []
}
