# Environment variables for doggy-nav-server
# Copy this file to .env and update with your actual values

# Server configuration
PORT=3002
NODE_ENV=development

# Security
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
MONGO_URL=localhost:27017
REQUIRE_CLIENT_SECRET=false
CORS_ORIGIN=http://localhost:3000
PUBLIC_BASE_URL=http://localhost:3000
COOKIE_DOMAIN=

# OAuth providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3002/api/auth/github/callback

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3002/api/auth/google/callback

# Rate limiting (optional override)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100