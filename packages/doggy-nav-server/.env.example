# Environment variables for doggy-nav-server
# Copy this file to .env and update with your actual values

# Server configuration
PORT=3002
NODE_ENV=development

# Security
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
MONGO_URL=localhost:27017
REQUIRE_CLIENT_SECRET=false
CORS_ORIGIN=http://localhost:3001
PUBLIC_BASE_URL=http://localhost:3001

# auto, allowlist, fixed
COOKIE_DOMAIN_MODE=auto
COOKIE_DOMAIN=
COOKIE_DOMAIN_ALLOWLIST=
REQUIRE_INVITE_CODE=

# OAuth providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=
LINUXDO_CALLBACK_URL=http://localhost:3001/api/auth/linuxdo/callback
LINUXDO_AUTHORIZATION_URL=
LINUXDO_TOKEN_URL=
LINUXDO_PROFILE_URL=
LINUXDO_SCOPE=profile,email

# Rate limiting (optional override)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM_NAME=Doggy Nav
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_REPLY_TO=support@example.com