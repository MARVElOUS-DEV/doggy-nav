# Environment variables for doggy-nav-server
# This is a sample file for local development
# Copy to .env.local for local development

# Server configuration
PORT=3002
NODE_ENV=development

# Security
JWT_SECRET=doggy-nav-local-jwt-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
MONGO_URL=localhost:27017
REQUIRE_CLIENT_SECRET=false
CORS_ORIGIN=http://localhost:3001
PUBLIC_BASE_URL=http://localhost:3001
COOKIE_DOMAIN=

# OAuth providers (fill with local OAuth apps or mock credentials)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=
LINUXDO_CALLBACK_URL=http://localhost:3001/api/auth/linuxdo/callback
LINUXDO_AUTHORIZATION_URL=
LINUXDO_TOKEN_URL=
LINUXDO_PROFILE_URL=
LINUXDO_SCOPE=profile,email

# Rate limiting (optional override)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000